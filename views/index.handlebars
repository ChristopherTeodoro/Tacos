<header>
	<h1>Eat Da Taco!</h1>
</header><!-- /header -->

<div class="wrapper">
	<div id="create-taco">
		<form action="/" method="POST">
			<input id="taco-name" type="text" name="taco_name" placeholder="Create a taco">
			<button id="submit-btn" type="submit">Creation</button>
		</form>
	</div>

	<section id="tacos-container">
		<div id="tacos-available">
			<h2>Tacos Available</h2>
			{{#each tacos}}
				{{#unless this.devoured}}
				  <div class="taco">
				    <form class="devour-taco-form" action="/{{id}}?_method=PUT" method="POST">
				  		<button class="eat-btn">EAT</button>
				    </form>
						{{taco_name}} <span>#{{id}}</span>
				  </div>
				{{/unless}}
			{{/each}}
		</div>
		<div id="tacos-devoured">
			<h2>Taco Heaven</h2>
			{{#each tacos}}
				{{#if this.devoured}}
				  <div class="taco">{{taco_name}} <span>#{{id}}</span></div>
				{{/if}}
			{{/each}}
		</div>
	</section>
</div>